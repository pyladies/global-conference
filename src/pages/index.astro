---
import config from "@/config/config.json";
import Base from "@/layouts/Base.astro";

const cards = [
  {
    "title": "2025 Conference Website",
    "description": "Visit this year's website and learn more about the conference. More information soon!",
    "button_url": "#",
    "button_text": "Go to site",
    "classes": "max-w-full p-6 border bg-red-100 border-gray-200 rounded-lg shadow-sm cursor-not-allowed",
  },
  {
    "title": "Blog",
    "description": "Learn about the latest news about the conference to stay up to date with the deadlines, resources, and more!",
    "button_url": "/blog",
    "button_text": "Latests posts",
    "classes": "max-w-full p-6 border bg-yellow border-gray-200 rounded-lg shadow-sm",
  },
  {
    "title": "Documentation",
    "description": "Organizing a conference takes a lot of effort and coordination, you can read how PyLadiesCon is organized here.",
    "button_url": "/docs",
    "button_text": "Check the docs",
    "classes": "max-w-full p-6 border bg-yellow border-gray-200 rounded-lg shadow-sm",
  },
]

const previousEvents = [
  {
    "title": "2024 Conference Website",
    "description": "Visit 2024 website and learn more about the past conference.",
    "button_url": "https://global-conference-2024.netlify.app",
    "button_text": "Go to 2024 site",
  },
  {
    "title": "2023 Conference Website",
    "description": "Visit 2023 website and learn more about the past conference.",
    "button_url": "https://global-conference-2023.netlify.app",
    "button_text": "Go to 2023 site",
  },
]

---

<Base>
  <section class="section">
    <div class="container">
      <h1 class="pb-10">Welcome to PyLadiesCon</h1>
        <div class="grid grid-cols-2 gap-3">
        {
          cards.map((card) => (
          <div class={ card.classes }>
            <a href={ card.button_url }>
                <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900">{ card.title }</h5>
            </a>
            <p class="mb-3 font-normal text-gray-700">
              { card.description }
            </p>
            <a href={ card.button_url } class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-primary rounded-lg hover:bg-blue-200 focus:ring-4 focus:outline-none focus:ring-red-300">
              { card.button_text }
              <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                  <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
              </svg>
            </a>
          </div>
          ))
      }
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <h3 class="pb-10">Previous versions</h3>
      <div class="grid grid-cols-2 gap-3">

      {
        previousEvents.map((card) => (
        <div class="max-w-full p-6 border bg-gray-100 border-gray-200 rounded-lg shadow-sm">
            <a href={ card.button_url }>
                <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900">{ card.title }</h5>
            </a>
            <p class="mb-3 font-normal text-gray-700">
              { card.description }
            </p>
              <a href={ card.button_url } class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-primary rounded-lg hover:bg-blue-200 focus:ring-4 focus:outline-none focus:ring-red-300">
                { card.button_text }
                <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
                </svg>
              </a>
        </div>
        ))
      }

      </div>
    </div>
  </section>
</Base>
